<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>

<StackPane minWidth="600.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.turkuamk.studentproject.painless.MainWindowController">
	<children>
		<VBox >
			<padding><Insets top="2" right="2" bottom="2" left="2"/></padding>
			<children>
				<GridPane>
				<padding><Insets top="2" right="2" bottom="2" left="2"/></padding>
				<children>
					<Label text="PAINLESS" GridPane.columnIndex="0" GridPane.rowIndex="0" ><font><Font name ="Arial" size="25.0" /></font></Label>
					
					<Button fx:id="settingsButton" text="Settings" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="0" />
					<Button fx:id="logoutButton" text="Logout" alignment="CENTER_RIGHT" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
					<Text fx:id="loggedInAsText" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
				</children>
				<columnConstraints>
					<ColumnConstraints minWidth="10.0" percentWidth="60.0"/>
					<ColumnConstraints minWidth="10.0" percentWidth="20.0"/>
					<ColumnConstraints minWidth="10.0" percentWidth="20.0"/>
				</columnConstraints>
				<rowConstraints>
					<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
					<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				</rowConstraints>
				</GridPane>
				<HBox >
				<children>
				<GridPane fx:id="channelList">
					<children>
					</children>
					<columnConstraints>
						<ColumnConstraints minWidth="10.0" percentWidth="60.0"/>
						<ColumnConstraints minWidth="10.0" percentWidth="20.0"/>
						<ColumnConstraints minWidth="10.0" percentWidth="20.0"/>
					</columnConstraints>
				</GridPane>
				<ScrollPane fx:id="chatScreen" minHeight="200.0" prefWidth="250.0">
					<GridPane fx:id="chatBox">
					<children>
					</children>
					<columnConstraints>
						<ColumnConstraints minWidth="10.0" percentWidth="10.0"/>
						<ColumnConstraints minWidth="10.0" percentWidth="90.0"/>
					</columnConstraints>
					</GridPane>
				</ScrollPane>
				</children>
				</HBox>
			</children>
		</VBox>
	</children>
	<Text fx:id="user" />
</StackPane>

